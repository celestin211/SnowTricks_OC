{% extends 'profile-base.html.twig' %}

{% block subtitle %}Vue d'ensemble{% endblock %}
{% block mainTitle %}Modification du mot de passe{% endblock %}

{% block body %}
    <div class="col-lg-4">
        <div class="card card-small mb-4">
            <div class="card-header border-bottom">
                <h6 class="m-0">Modifier votre mot de passe</h6>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item p-3">
                    <div class="row">
                        <div class="col">
                            {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_row(form.oldPassword) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.newPassword) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.confirmPassword) }}
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-success mt-3">Modifier le mot de passe</button>
                                </div>                              
                            {{ form_end(form) }}
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}