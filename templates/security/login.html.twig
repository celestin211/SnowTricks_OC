{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Se connecter{% endblock %}

{% block body %}
    <div class="container login">

        <!-- Start Logo -->
        <div class="row justify-content-center">
            <div class="col-2">
                <img class="img-fluid mb-5" src="/images/login-logo.png" alt="Login Logo">
            </div>               
        </div>
        <!-- Start Logo -->

        <!-- Start Login Form -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-5 text-center">Connectez-vous</h1>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error | trans ({}, 'error')}}
                    </div>
                {% endif %}
                <form method="post" novalidate>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-info alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                    <div class="mb-3">
                        <input type="email" class="form-control" placeholder="Email" id="username" name="email"
                               value="{{ last_username }}" required="required" autofocus>

                    </div>
                    <div class="mb-3">
                        <input type="password" id="password" name="password" required="required" class="form-control form-control-lg"
                               placeholder="Mot de passe" aria-label="Password"/>
                    </div>
                    <div class="form-check form-switch">
                        <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input" > Se souvenir de moi
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>

                    <div class="text-center">
                        <button type="submit"  class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0">Se
                            connecter</button>
                    </div>
                </form>
                <div class="text-center">
                    <a href="#">Mot de passe oublié ?</a>
                </div>
            </div>
        </div>
        <!-- Start Login Form -->
        
    </div>
{% endblock %}
