{% extends 'admin-base.html.twig' %}

{% block subtitle %}Vue d'ensemble{% endblock %}
{% block mainTitle %}Modification de commentaire{% endblock %}

{% block body %}
    <div class="col-lg-6">
        <div class="card card-small mb-4">
            <div class="card-header border-bottom">
                <h6 class="m-0">Modifier le commentaire</h6>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item p-3">
                    Trick : <a href="/trick/{{ comment.trick.id }}#{{ comment.id }}" target="_blank">{{ comment.trick.title }}</a>
                </li>
                <li class="list-group-item p-3">
                    <div class="row">
                        <div class="col">
                           {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_row(form.content) }}
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-success mt-3">Modifier</button>
                            </div>                           
                            {{ form_end(form) }}
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}