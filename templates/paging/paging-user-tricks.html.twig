<div class="row justify-content-center">
    {% set page = paging.currentPage %}
    {% if paging.pages == 0 %}
        {% set pages = 1 %}
    {% else %}
        {% set pages = paging.pages %}
    {% endif %}
    <div class="mb-3">
        <ul class="pagination justify-content-center">
            {% if page > 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, {'id' : user.id, 'page' : pageC, 'pageT' : 1 })}}#paging-tricks"><<</a>
