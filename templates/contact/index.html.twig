{% extends 'base.html.twig' %}

{% block body %}
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8 mx-auto text-center">
                    <div class="ms-3 mb-md-5">
                        <div class="icon icon-shape bg-gradient-info shadow text-center mb-4">
                            <i class="ni ni-single-02 text-white opacity-10"></i>
                        </div>
                        <h3>Contact us</h3>
                        <p>
                            For further questions, including partnership opportunities, please email hello@creative-tim.com
                            or contact us using our contact form.
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="card card-plain">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Votre Email</label>
                                    <div class="input-group mb-4">
                                        {{ form_widget(form.email, { 'attr': {'class': 'form-control border-radius-l'} }) }}
                                    </div>
                                    <small class="text-danger"> {{ form_errors(form.email) }} </small>
                                </div>
                                <div class="col-md-6 ps-2">
                                    <label>Votre objet</label>
                                    <div class="input-group">
                                        {{ form_widget(form.objet, { 'attr': {'class': 'form-control border-radius-l'} }) }}
                                    </div>
                                    <small class="text-danger"> {{ form_errors(form.objet) }} </small>
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <label>Votre message</label>
                                {{ form_widget(form.message, {'attr': {'class': 'form-control border-radius-lg'}}) }}
                            </div>
                            <small class="text-danger"> {{ form_errors(form.message) }} </small>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check form-switch mb-4">
                                        {{ form_widget(form.phone, {'attr': {'class': 'form-check-input'}}) }}
                                        <label class="form-check-label" for="flexSwitchCheckDefault">
                                            I agree to the <a href="javascript:;" class="text-dark text-decoration-underline-hover"><u>Terms and Conditions</u></a>.
                                        </label>
                                    </div>
{#                                    <small class="text-danger"> {{ form_errors(form.terms) }} </small>#}
                                </div>
                                <div class="col-md-12">
{#                                    {{ form_widget(form.valide, {'attr': {'class': 'btn bg-gradient-info w-100'}}) #}
                                    <button type="submit">Valider</button>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock body %}
